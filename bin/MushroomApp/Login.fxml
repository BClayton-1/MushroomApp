<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MushroomApp.LoginController">
   <children>
      <BorderPane prefHeight="300.0" prefWidth="300.0">
         <center>
            <VBox alignment="CENTER" prefHeight="132.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="isConnected" prefWidth="92.0" text="Label" />
                  <HBox alignment="CENTER" prefHeight="32.0" prefWidth="200.0">
                     <children>
                        <Label prefHeight="16.0" prefWidth="64.0" text="Username" />
                        <TextField fx:id="txtUsername" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="32.0" prefWidth="200.0">
                     <children>
                        <Label prefHeight="16.0" prefWidth="64.0" text="Password" />
                        <PasswordField fx:id="txtPassword" />
                     </children>
                  </HBox>
                  <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#Login" text="Login" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </VBox>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
